    \fi

    \iffourth
    \sigLine 
    \@fourthreader \par \@fourthreadertitle \par \@fourthreaderjob \par
    \fi

    \iffifth
    \sigLine 
    \@fifthreader \par \@fifthreadertitle \par \@fifthreaderjob \par
    \fi

    \ifsixth
    \sigLine 
    \@sixthreader \par \@sixthreadertitle \par \@sixthreaderjob \par
    \fi
    
    \sigLine
