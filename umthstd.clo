  \thispagestyle{empty}
  \setcounter{page}{2}
\begin{flushleft}
  \def\sigLine {\vfill \rule{0.55\textwidth}{0.5pt} \hskip .15\textwidth \rule{.25\textwidth}{0.5pt}\par}
    \normalsize
    We approve the \lowercase{\umthesis@typename\ }of \@author \par
    \hskip .7\textwidth Date \par
    \ifcochairs
      \sigLine 
      \@firstchair \par \@firstchairtitle \par\ \@firstchairjob \par
      \sigLine 
      \@secondchair \par \@secondchairtitle \par \@secondchairjob \par

    \else
      \sigLine 
      \@committeechair \par \@committeechairtitle \par \@committeechairjob
    \fi
    
    \sigLine 
    \@firstreader \par \@firstreadertitle \par \@firstreaderjob \par

    \ifsecond
    \sigLine 
    \@secondreader \par \@secondreadertitle \par \@secondreaderjob \par
    \fi

    \ifthird
    \sigLine 
